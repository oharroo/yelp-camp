<% layout('layouts/boilerplate') %>

    <div class="container justify-content-center align-items-center mt-5">
        <div class="row">
            <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                <div class="card shadow">
                    <img src="https://images.unsplash.com/photo-1532339142463-fd0a8979791a?ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mnx8Y2FtcGluZ3xlbnwwfHwwfHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60"
                        alt="" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title mb-3">Register</h5>
                        <form action="/register" method="POST"
                            class="needs-validation" novalidate>
                            <div class="mb-3">
                                <label class="form-label"
                                    for="username">Username</label>
                                <input class="form-control" type="text"
                                    id="username" name="username" autofocus
                                    required>
                                <div class="valid-feedback">Looks good!</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label"
                                    for="email">Email</label>
                                <input class="form-control" type="email"
                                    id="email" name="email" required>
                                <div class="valid-feedback">Looks good!</div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label"
                                    for="password">Password</label>
                                <input class="form-control" type="password"
                                    id="password" name="password" required>
                                <div class="valid-feedback">Looks good!</div>
                            </div>
                            <div class="d-grid gap-2">
                                <button
                                    class="btn btn-success">Register</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>